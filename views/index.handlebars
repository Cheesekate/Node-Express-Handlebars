<h1>Burgers!</h1>

<h2>Eat!</h2>


<div>
  <form action="/insertOne" method="post">
    <div>
      <textarea name="burgers_name" type="text" cols="30" rows="10"></textarea><br>
      <button type="submit" class=" btn btn-primary">Add burger</button>
    </div>
  </form>
</div>

<ul>
  {{#each burgers}}
  {{#unless this.eaten}}
  <div>
    <p>{{this.burgers_name}}</p>
    <form action="/updateOne/{{this.id}}" method="post">
      <input type="hidedn" name="eaten" value="1">
      <button type="submit" class="btn btn-warning"></button>
    </form>
    <br>
  </div>

  {{/unless}}
  {{/each}}
</ul>



<ul>
  {{#each burgers}}
  {{#if this.eaten}}
  <div>
    <p>{{this.burgers_name}}</p>
    <form action="/deleteOne/{{this.id}}" method="POST">
      <button type="submit" class="btn btn-primary">Delete burger</button>
    </form>
  </div>
  {{/if}}
  {{/each}}
</ul>